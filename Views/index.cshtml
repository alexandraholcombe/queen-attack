@{
  Layout="Shared/_Layout.cshtml";
}

<img src="~/Content/img/chessboard.png" alt="Chessboard">
<form action="/results" method="post">
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label for="qXCoord">Queen X Coordinate</label>
        <select name="qXCoord" id="qXCoord" class="form-control">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8">8</option>
        </select>
      </div>
      <div class="form-group">
        <label for="qYCoord">Queen Y Coordinate</label>
        <select name="qYCoord" id="qYCoord" class="form-control">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8">8</option>
        </select>
      </div>
    </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="pXCoord">Pawn X Coordinate</label>
          <select name="pXCoord" id="pXCoord" class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
          </select>
        </div>
        <div class="form-group">
          <label for="pYCoord">Pawn Y Coordinate</label>
          <select name="pYCoord" id="pYCoord" class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
          </select>
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-lg btn-warning">Submit</button>
  </form>
